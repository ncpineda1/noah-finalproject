{% extends '_templates/base.njk' %}

{% block page_title %}Tour Dates{% endblock %}

{% block page_description %}A list of Queen tour dates spanning from Oct. 2023 to Feb. 2024.{% endblock %}

{% block content %}
<article class="container">
    <h1 class="mb-4"><strong>2023-2024 Queen Tour Dates</strong></h1>

    <table class="table table-striped table-responsive">
    <thead class="table-dark">
        <tr>
        <th scope="col">Date</th>
        <th scope="col" class="d-none d-sm-table-cell">City</th>
        <th scope="col" class="d-none d-sm-table-cell">Country</th>
        <th scope="col">Venue</th>
        </tr>
    </thead>
    <tbody class="table-group-divider">
    {% for tours in queen.tour %}
        <tr>
            <td>{{ tours.date }}</td>
            <td class="d-none d-sm-table-cell">{{ tours.city }}</td>
            <td class="d-none d-sm-table-cell">{{ tours.country }}</td>
            <td>{{ tours.venue }}</td>
        </tr>
    {% endfor %}
    </tbody>
    </table>
</article>
{% endblock %}